{
  "name": "litelists",
  "version": "0.1.0",
  "private": true,
  "description": "The fastest shared list app for households - real-time collaborative shopping and packing lists",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --filter \"./apps/**\" dev",
    "dev:web": "pnpm --filter web dev",
    "dev:mobile": "pnpm --filter mobile dev",
    "build": "pnpm --filter \"./apps/**\" --filter \"./packages/**\" build",
    "build:web": "pnpm --filter web build",
    "build:mobile": "pnpm --filter mobile build",
    "lint": "pnpm --filter \"./apps/**\" --filter \"./packages/**\" lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "type-check": "pnpm --filter \"./apps/**\" --filter \"./packages/**\" type-check",
    "clean": "rm -rf node_modules && pnpm --filter \"./apps/**\" --filter \"./packages/**\" clean"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
